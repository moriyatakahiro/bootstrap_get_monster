<div class="container">

<h1>GET一覧</h1>


<% @reports.reverse_each do |report| %>
<div class="thumbnail">
  <div>
    <h2>捕まえたポケモン：<%= report.title %></h2>
    <p><%= report.content %></p>
  </div>
  <div>
    捕まえた場所：東京都<%= report.city %>区
    <%= report.town %>町
    <%= report.adress %>丁目
  </div>
  <div>
    <strong></strong>
    <% if report.image.url.present? %>
      <%= image_tag report.image.url %>
    <% end %>
  </div>
</div>
<% end %>
</div>
