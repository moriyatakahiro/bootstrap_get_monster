<div class="container">
  
  

<h1>ログイン</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

<div>
  <%= f.label :email %><br>
  <%= f.email_field :email %>
</div>
<div>
  <%= f.label :password %><br>
  <%= f.password_field :password %>
</div>
<div><br>
  <%= f.submit "ログイン", class: 'btn btn-primary' %>
</div>
<% end %>
</div>