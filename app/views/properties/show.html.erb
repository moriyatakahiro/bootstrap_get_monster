<h1>物件詳細画面</h1>

<%= form_with(model: @property, local: true) do |form| %>
  
<h2>物件名  <%= @property.name %></h2>
    <br>
    <strong></strong>
    <% if property.image.url.present? %>
      <%= image_tag property.image.url %>
    <% end %>
    <div>住所 〒<%= @property.postful_code %>-
      <%= @property.postful_code_after %>
      <%= @property.city %>区
      <%= @property.town %>
      <%= @property.adress %>丁目
      <%= @property.after_adress %>
    </div>
    <br>
    <div>築年数 <%= @property.property_age%>年</div>
    <div>家賃 <%= @property.rent%>円</div>
    <div>広さ <%= @property.floor_space%></div>
    <div>間取り <%= @property.floor_plan %></div>
    <div>ポケストップの数 <%= @property.stop_count %></div>
    <div>ポケストップの場所 <%= @property.stop_adress %></div>
    <div>出現するポケモン <%= @property.encount_monster %></div>
    
    
    
<div> 
  <% if @favorite.present? %>
    <%= link_to 'いいね！解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'いいね！する', favorites_path(properties_id: @property.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
  <%= link_to 'お問い合わせする', new_property_contact_path(@property) %>
</div>
<% end %>