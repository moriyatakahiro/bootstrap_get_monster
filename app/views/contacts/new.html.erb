<div class="container">

<%= form_with(model: Contact.new, local: true, url: property_contacts_path) do |form| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "件") %> のエラーがあります</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  

  <div class="form-group">
    <%= form.label :名前 %><br>
    <%= form.text_field :name, id: :contact_name %>
  </div>

  <div class="form-group">
    <%= form.label :メールアドレス %><br>
    <%= form.text_field :email, id: :contact_email %>
  </div>

  <div class="form-group">
    <%= form.label :お問い合わせ内容 %><br>
    <%= form.text_area :content, class="form-control" id: :contact_content %>
  </div>

  <div class="actions">
    <%= form.submit "送信する", class: 'btn btn-primary' %>
  </div>
<% end %>

</div>