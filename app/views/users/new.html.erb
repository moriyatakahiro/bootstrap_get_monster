<div class="container">

<h1>サインアップ</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "件") %> のエラーがあります</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>  
  <div>
  <%= f.label :名前 %><br>
  <%= f.text_field :name %>
  </div>
  <div>
  <%= f.label :メールアドレス %><br>
  <%= f.email_field :email %>
  </div>
  <div>
  <%= f.label :パスワード %><br>
  <%= f.password_field :password %>
  </div>
  <div>
  <%= f.label :確認用パスワード %><br>
  <%= f.password_field :password_confirmation %>
  </div><br>
  <%= f.submit "アカウント作成" %>
<% end %>
</div>