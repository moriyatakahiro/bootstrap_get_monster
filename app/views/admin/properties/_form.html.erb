<%= form_with(model: @property, local: true,url: confirm_admin_properties_path ) do |form| %>
   <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= @property.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <div class="property_name">
    <%= form.label :物件名 %><br>
    <%= form.text_field :name %>
  </div>
  <br>
  <div class="postful_code">
    <%= form.label :郵便番号 %>
    〒<%= form.text_field :postful_code %>
    -<%= form.text_field :postful_code_after %>
 
     東京都(東京23区のみ)<%= form.text_field :city %>区
  
    
    (町名)<%= form.text_field :town %>
 
 
    
    <%= form.text_field :after_adress %>
  </div>
  <br>
  <div class="property_age">
    <%= form.label :築年数 %>
    築<%= form.text_field :property_age %>年
  </div>
  <div class="property_rent">
    <%= form.label :家賃 %>
    <%= form.text_field :rent %>円
  </div>
  <div class="property_floor_space">
    <%= form.label :広さ %>
    <%= form.text_field :floor_space %>(㎡)
  </div>
  <div class="property_floor_plan">
    <%= form.label :間取り%>
    <%= form.text_field :floor_plan %>例：4LDK
  </div>
  <div class="property_encount_monster">
    <%= form.label :出現するポケモン %>
    <%= form.text_field :encount_monster %>
  </div>
  <div class="property_stop_count">
    <%= form.label :ポケストップの数 %>
    <%= form.text_field :stop_count %>コ
  </div>
  <div class="property_stop_adress">
    <%= form.label :ポケストップの場所 %>
    <%= form.text_field :stop_adress %>
  </div>
  <div style="text-align:center;">
  <div class="field">
    <%= form.label :画像 %>
    <%= form.file_field :images, multiple: true, class: 'file_field' %>
    <%= form.hidden_field :images_cache %><br>
  </div>
  </div>
 
  <%= form.submit "登録する" %>
<% end %>